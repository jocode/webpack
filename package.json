{
  "name": "webpack-init",
  "version": "1.0.0",
  "description": "Introduccion a webpack",
  "main": "index.js",
  "scripts": {
    "build": "webpack --entry ./index.js --output ./bundle.js --mode development",
    "build:local": "webpack --mode production",
    "build:external": "webpack --config ./external/webpack.config.js",
    "build:multi": "webpack --config ./multi_entry_points/webpack.config.js",
    "build:css": "webpack --config ./css-style-loader/webpack.config.js",
    "build:plugins": "webpack --config ./plugins/webpack.config.js",
    "build:dev": "webpack-dev-server --config ./webpack-dev-server/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jocode/webpack.git"
  },
  "keywords": [
    "webpack"
  ],
  "author": "@jocode",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jocode/webpack/issues"
  },
  "homepage": "https://github.com/jocode/webpack#readme",
  "dependencies": {},
  "devDependencies": {
    "css-loader": "^3.4.2",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "style-loader": "^1.1.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
